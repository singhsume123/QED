<p id="notice"><%= notice %></p>

<h1>Listing Tables</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Capacity</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.status %></td>
        <td><%= table.capacity %></td>
        <td><%= table.restaurant_id %></td>
        <td><%= link_to 'Show', restaurant_table_path(@restaurant, table) %></td>
        <td><%= link_to 'Edit', edit_restaurant_table_path(@restaurant, table) %></td>
        <td><%= link_to 'Destroy', [@restaurant,table], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

